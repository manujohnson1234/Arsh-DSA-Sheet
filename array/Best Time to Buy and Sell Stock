class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int ans = 0;
        int mn = prices[0];
        int mx = prices[0];

        for(int i =1; i < prices.size(); i++){
            if(mn > prices[i]){
                mn = prices[i];
                mx = prices[i];
            }else if(prices[i] > mx){
                mx = prices[i];
                ans = max(ans, mx - mn);
            }
        }
        return ans;
    }
};
